# API Configuration
REACT_APP_API_URL=http://localhost:8000
REACT_APP_API_TIMEOUT=30000
REACT_APP_MAX_RETRIES=3
REACT_APP_RETRY_DELAY=1000

# Feature Flags
REACT_APP_ENABLE_STATS=true
REACT_APP_ENABLE_CONNECTION_MONITORING=true
REACT_APP_ENABLE_ENHANCED_LOGGING=true
REACT_APP_ENABLE_RETRY_LOGIC=true

# UI Configuration
REACT_APP_THEME_MODE=light
REACT_APP_ENABLE_ANIMATIONS=true
REACT_APP_AUTO_SCROLL=true

# Development
REACT_APP_DEBUG_MODE=false
REACT_APP_MOCK_API=false

# Security
REACT_APP_ENABLE_CSP=true
REACT_APP_ENABLE_HTTPS_ONLY=false